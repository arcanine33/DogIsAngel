<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="276dp"
        android:id="@+id/pro_cardView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:id="@+id/pro_item_image"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackbackground"
                    android:layout_alignBottom="@+id/pro_item_image"/>

                <kr.co.dogisangel.android.dogisangel.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/promote_dog_size"
                    android:textSize="18sp"
                    android:layout_above="@+id/post_title"
                    android:layout_marginLeft="16dp"
                    android:textColor="#ffffff" />
                <ImageView
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="7dp"
                    android:layout_width="44dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jeonmoomin_articles_star1"
                    android:id="@+id/grade_img"/>

                <kr.co.dogisangel.android.dogisangel.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_alignBottom="@+id/pro_item_image"
                    android:id="@+id/post_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="11dp"
                    android:textColor="#ffffff"
                    android:text="sdsadsdsd"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="9dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pro_my_image"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:transitionName="@string/transitionName"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <kr.co.dogisangel.android.dogisangel.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="홍길동"
                                android:id="@+id/pro_my_name"
                                android:textSize="13sp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                >

                                <kr.co.dogisangel.android.dogisangel.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="숫자"
                                    android:layout_marginTop="7dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorred"
                                    android:id="@+id/price"
                                    />

                                <kr.co.dogisangel.android.dogisangel.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/price"
                                    android:layout_marginTop="7dp"
                                    android:textColor="@color/colorred"
                                    android:layout_marginLeft="7dp"
                                    android:text="만원"
                                    android:textSize="18sp"
                                    android:id="@+id/price_unit"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <kr.co.dogisangel.android.dogisangel.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기본 주소 "
                                android:id="@+id/my_region"
                                android:textSize="10sp"/>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    >

                    <kr.co.dogisangel.android.dogisangel.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="날짜"
                        android:textSize="10sp"
                        android:id="@+id/date"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="3dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/comment_icon"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@+id/comment_count"

                            />
                        <kr.co.dogisangel.android.dogisangel.CustomTextView
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:layout_toLeftOf="@+id/star_count_img"
                            android:id="@+id/comment_count"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/star_count_img"
                            android:layout_toLeftOf="@+id/star_count"
                            android:clickable="true"/>


                        <kr.co.dogisangel.android.dogisangel.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/star_count"/>

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
